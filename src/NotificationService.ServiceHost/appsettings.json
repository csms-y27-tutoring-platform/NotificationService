{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Infrastructure": {
    "Persistence": {
      "Postgres": {
        "Database": "notification_service",
        "Host": "localhost",
        "Username": "postgres",
        "Password": "postgres",
        "Port": 5432
      }
    },
    "Kafka": {
      "Connection": {
        "Host": "localhost:9092",
        "SecurityProtocol": "Plaintext"
      },
      "Consumer": {
        "GroupId": "notification-service-group",
        "BookingCreatedTopic": "booking-created",
        "BookingCancelledTopic": "booking-cancelled",
        "BookingCompletedTopic": "booking-completed",
        "ReminderBeforeLessonTopic": "reminder-before-lesson"
      }
    }
  }
}